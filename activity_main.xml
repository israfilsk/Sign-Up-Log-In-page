<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/holo_green_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_register"
            android:paddingLeft="20dp"
            android:background="@drawable/corner_design"
            android:hint="User Name"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="20dp"
            android:id="@+id/email_register"
            android:background="@drawable/corner_design"
            app:layout_constraintStart_toStartOf="@+id/username_register"
            app:layout_constraintEnd_toEndOf="@+id/username_register"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/username_register"
            app:layout_constraintHorizontal_bias="0.0"
            android:hint="Email"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_register"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="@+id/email_register"
            app:layout_constraintEnd_toEndOf="@+id/email_register"
            android:background="@drawable/corner_design"
            android:hint="Password"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/email_register"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/register_button"
            android:background="@drawable/button_design"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/password_register"
            app:layout_constraintEnd_toEndOf="@+id/password_register"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password_register"/>
    <TextView
            android:text="Already have an Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/already_account"
            app:layout_constraintStart_toStartOf="@+id/register_button"
            app:layout_constraintEnd_toEndOf="@+id/register_button"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/register_button"
            android:textColor="@android:color/white" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.052"
            android:textStyle="bold"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@drawable/round_button"
            android:id="@+id/button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginLeft="110dp" android:layout_marginStart="110dp" android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp" android:hint="Image"/>
</android.support.constraint.ConstraintLayout>